@inject QuestResourses resourses
@using editor.Shared.Actions

<div class="modal fade show" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title">Редактор действия</h5>
                <button @onclick="CloseConditionEditor" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="oi oi-x"></span>
                </button>
            </div>
            <div class="modal-body d-flex flex-row grid-col-350-auto">
                
                <div class="w-100">
                    <SetDialogStateDetals CommonAction="@Action" />
                    <ChengeVariableDetals CommonAction="@Action" />
                    <AddJournalRecordDetals CommonAction="@Action" />
                    <OpenDialogDetals CommonAction="@Action" />
                    <NextReplicaDetals CommonAction="@Action" />
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public IAction Action { get; set; }

    [Parameter]
    public EventCallback CloseConditionEditor { get; set; }
}
