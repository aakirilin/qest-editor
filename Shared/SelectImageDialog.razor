@inject QuestResourses resourses

<div class="modal fade show" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Выберите изображение</h5>
                <button @onclick="async () => await CloseDialog.InvokeAsync()" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="oi oi-x"></span>
                </button>
            </div>
            <div class="modal-body d-flex flex-column">
                @foreach (var image in resourses.Images)
                {
                    <button @onclick="async () => { await OnApplay.InvokeAsync(image); await CloseDialog.InvokeAsync(); }" >
                        <span>@image.Name</span>
                        <img class="image-preview" src="@image.DaraUrl" />
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@code{

    [Parameter]
    public EventCallback<Image> OnApplay { get; set; }

    [Parameter]
    public EventCallback CloseDialog { get; set; }
}